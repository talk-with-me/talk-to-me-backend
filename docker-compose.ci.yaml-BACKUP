version: '3'

services:
  test-env:
    image: ttm-tests
    build:
      context: .
      dockerfile: Dockerfile.ci.test
    depends_on:
      - app

  app:
    build:
      context: .
      dockerfile: Dockerfile.ci.app
    depends_on:
      - mongo
    environment:
      - MONGO_URL=mongodb://user:secret@mongo:27017
    ports:
      - "8000:8000"

  mongo:
    image: mongo
    environment:
      MONGO_USER: user
      MONGO_PASS: secret
    ports:
      - "58017:27017"
